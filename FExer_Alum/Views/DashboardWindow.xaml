<Window x:Class="FINALPROJECT_OOP_ALUM.Views.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FINALPROJECT_OOP_ALUM.Views"
        xmlns:ViewModel ="clr-namespace:FINALPROJECT_OOP_ALUM.ViewModels"
        xmlns:Font ="http://schemas.fontawesome.io/icons/" 
        mc:Ignorable="d"
        Title="DashboardWindow" 
        Height="650" 
        Width="1100"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent">

    <Window.DataContext>
        <ViewModel:DashboardViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <DataTemplate DataType="{x:Type ViewModel:PCBuildViewModel}">
            <local:PCBuildUserControl/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type ViewModel:RepairServiceManagementViewModel}">
            <local:RepairUserControl/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type ViewModel:CustomersViewModel}">
            <local:CustomerUserControl/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type ViewModel:InventoryManagementViewModel}">
            <local:InventoryUserControl/>
        </DataTemplate>

    </Window.Resources>

    <Border CornerRadius ="20"
            BorderThickness="5">

        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" 
                                      EndPoint="1,1">
                <GradientStop Color="{StaticResource B1}" Offset="0"/>
                <GradientStop Color="{StaticResource B2}" Offset="0.75"/>
                <GradientStop Color="{StaticResource B3}" Offset="1"/>

            </LinearGradientBrush>
        </Border.BorderBrush>

        <Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <!--NAVITATION PANEL-->
                <Border CornerRadius="20,0,0,20"
                        Grid.Column="0"
                        Background ="{StaticResource color14}">

                    <StackPanel>
                        <StackPanel Orientation="Horizontal"
                                    Height="70"
                                    Margin="15,30,0,30">

                            <Image Source="/Images/Logo.png" 
                                   Height="70"/>

                            <StackPanel Margin="5,0,0,0">
                                <TextBlock Text="TechTune"
                                           FontSize="15"
                                           FontWeight="ExtraBold"
                                           Foreground="{StaticResource color13}"/>
                                <TextBlock Text="PC"                                                       FontSize="15"
                                           FontWeight="ExtraBold"
                                           Foreground="{StaticResource color13}"/>
                                <TextBlock Text="Solutions"
                                           FontSize="15"
                                           FontWeight="ExtraBold"
                                           Foreground="{StaticResource color13}"/>
                            </StackPanel>

                        </StackPanel>

                        <!--menu buttons-->
                        <StackPanel Margin="0,40,0,0">

                            <RadioButton Style="{StaticResource menuButton}"
                                         Tag="{StaticResource color1}"
                                         Command="{Binding ShowHomeCommand}">

                                <StackPanel Orientation="Horizontal">
                                    <Font:ImageAwesome Style="{StaticResource menuButtonIcon}"
                                        Icon="Home"/>
                                    <TextBlock  Style="{StaticResource menuButtonText}" 
                                                Text="Home"
                                                FontSize="20"/>
                                </StackPanel>

                            </RadioButton>

                            <RadioButton Style="{StaticResource menuButton}"
                                         Tag="{StaticResource color7}"
                                         Command="{Binding ShowInventoryCommand}">

                                <StackPanel Orientation="Horizontal">

                                    <Font:ImageAwesome Style="{StaticResource menuButtonIcon}"
                                        Icon="Dropbox"/>
                                    <TextBlock  Style="{StaticResource menuButtonText}" 
                                                Text="Inventory"
                                                FontSize="20"/>
                                </StackPanel>

                            </RadioButton>

                            <RadioButton Style="{StaticResource menuButton}"
                                         Tag="{StaticResource color5}"
                                         Command="{Binding ShowRepairCommand}">

                                <StackPanel Orientation="Horizontal">
                                    <Font:ImageAwesome Style="{StaticResource menuButtonIcon}"
                                        Icon="ChainBroken"/>
                                    <TextBlock  Style="{StaticResource menuButtonText}" 
                                                Text="Repair"
                                                FontSize="20"/>
                                </StackPanel>

                            </RadioButton>

                            <RadioButton Style="{StaticResource menuButton}"
                                         Tag="{StaticResource color7}"
                                         Command="{Binding ShowPCBuildCommand}">

                                <StackPanel Orientation="Horizontal">
                                    <Font:ImageAwesome Style="{StaticResource menuButtonIcon}"
                                        Icon="Laptop"/>
                                    <TextBlock  Style="{StaticResource menuButtonText}" 
                                                Text="PC BUild"
                                                FontSize="20"/>
                                </StackPanel>

                            </RadioButton>

                            <RadioButton Style="{StaticResource menuButton}"
                                         Tag="{StaticResource color10}"
                                         Command="{Binding ShowCustomerCommand}">

                                <StackPanel Orientation="Horizontal">
                                    <Font:ImageAwesome Style="{StaticResource menuButtonIcon}"
                                        Icon="AddressBook"/>
                                    <TextBlock  Style="{StaticResource menuButtonText}" 
                                                Text="Customers"
                                                FontSize="20"/>
                                </StackPanel>

                            </RadioButton>
                        </StackPanel>
                    </StackPanel>


                </Border>

                <!--MAIN SECTION-->
                <Border CornerRadius="0,20,20,0"
                        Grid.Column="1" 
                        Grid.ColumnSpan="2"
                        Background="White">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Button Grid.Row="0"
                                x:Name="btnClose"
                                Background="Transparent"
                                Content="X"
                                FontSize="10"
                                Foreground="{StaticResource plainTextColor2}"
                                FontWeight="DemiBold"
                                Width="30"
                                Click="btnClose_Click"
                                HorizontalAlignment="Right"
                                Margin="0,0,10,0"
                                BorderThickness="0"/>

                        <Border BorderThickness="0,4,0,4"
                                BorderBrush="{StaticResource color8}"
                                Grid.Row="1">

                            <Grid >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0"
                                            Orientation="Horizontal"
                                            VerticalAlignment="Center" >

                                    <Font:ImageAwesome Icon="Dashboard"
                                                       Height="20"
                                                       Margin="40,0,0,0"
                                                       Foreground="{StaticResource color8}"/>

                                    <TextBlock Text="{Binding Caption}"
                                               FontSize="18"
                                               FontWeight="DemiBold"
                                               Foreground="{StaticResource color9}"
                                               Margin="10,0,0,0"/>



                                </StackPanel>

                                <StackPanel Grid.Column ="1"
                                            Orientation="Horizontal"
                                            VerticalAlignment="Center">
                                    
                                    <Font:ImageAwesome Icon="UserCircleOutline"
                                                       Height="20"
                                                       Margin="260,0,0,0"
                                                       Foreground="{StaticResource color8}"/>

                                    <TextBlock Text="Reshan Alum"
                                               FontSize="18"
                                               FontWeight="DemiBold"
                                               Foreground="{StaticResource plainTextColor3}"
                                               Margin="10,0,10,0"/>
                                </StackPanel>


                            </Grid>

                        </Border>

                        <Grid Grid.Row="2">

                            <Ellipse Height="818"
                                     VerticalAlignment="Top"
                                     Fill="#5ec"
                                     Margin="-14,117,503,0"
                                     Opacity="0.2"/>

                            <Ellipse Height="654"
                                     VerticalAlignment="Top"
                                     Fill="{StaticResource color2}"
                                     Margin="0,187,393,0"
                                     Opacity="0.2"/>

                            <Ellipse Height="444"
                                     VerticalAlignment="Top"
                                     Fill="{StaticResource color2}"
                                     Margin="372,346,10,0"
                                     Opacity="0.4"/>

                            <Ellipse Height="508"
                                     VerticalAlignment="Top"
                                     Fill="#5eccb4"
                                     Margin="255,187,162,0"
                                     Opacity="0.3"/>
                            
                            <Ellipse Height="606"
                                     VerticalAlignment="Top"
                                     Fill="{StaticResource color12}"
                                     Margin="482,89,-158,0"
                                     Opacity="0.5"/>

                            <Image Source="/Images/Logo.png" 
                                   Height="400"/>


                        </Grid>

                        <!--< Child Views-->
                        <ContentControl Grid.Row="2"
                                            Margin="5"
                                            Background="Transparent"
                                            Content="{Binding CurrentView}"/>

                    </Grid>
                </Border>
            </Grid>

        </Grid>

    </Border>

</Window>
