<UserControl x:Class="FINALPROJECT_OOP_ALUM.Views.PCBuildUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FINALPROJECT_OOP_ALUM.Views"
             xmlns:Font ="http://schemas.fontawesome.io/icons/" 
             mc:Ignorable="d" 
             d:DesignHeight="540" 
             d:DesignWidth="860"
             Background="White">

    <Grid>


        <Grid Grid.Row="1">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="410"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0"
                  Background="{StaticResource color14}">

                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="70"/>

                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0">

                    <TextBlock Text="Available Components"
                               FontSize="15"
                               FontWeight="ExtraBold"
                               Foreground="{StaticResource color13}"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center">

                        <Border Grid.Column="0"
                               Height="20"
                               Width="200"
                               Background="White"
                               Margin="10,0,0,0"
                               BorderBrush="DarkBlue" 
                               BorderThickness="2">

                            <TextBox Name="FilterTextBox"
                                    TextChanged="FilterTextBox_TextChanged"
                                    Margin="0,0,0,0"
                                    Foreground="{StaticResource color8}"/>

                        </Border>


                        <Border Grid.Column="0"
                               Height="20"
                               Background="White"
                               BorderBrush="DarkBlue" 
                               BorderThickness="2">

                            <Font:FontAwesome Icon="Search"
                                             Height="25"
                                             Width="30"
                                             FontSize="15"
                                             Margin="0,1,0,0"
                                             VerticalAlignment="Top"/>

                        </Border>


                    </StackPanel>

                    <ListView  Name="InventoryList"
                               Padding="5"
                               Margin="10,10,10,10"
                               Height="330"
                               BorderThickness="0"
                               ItemsSource="{Binding Inventory}"
                               SelectedItem="{Binding SelectedItem}" >

                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Background" Value="Transparent"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="{StaticResource color14}"/>
                                        <!-- Set background color for selected item -->
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListView.ItemContainerStyle>

                        <ListView.View>
                            <GridView>
                                <!-- Header Style -->
                                <GridView.ColumnHeaderContainerStyle>
                                    <Style TargetType="{x:Type GridViewColumnHeader}">
                                        <Setter Property="Background" Value="{StaticResource color13}"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="FontSize" Value="14"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </Style>
                                </GridView.ColumnHeaderContainerStyle>

                                <!-- Columns -->
                                <GridViewColumn Header="Name"  
                                                Width="140">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding ComponentName}" 
                                                       TextAlignment="Center"
                                                       Foreground="{StaticResource color13}" 
                                                       FontWeight="DemiBold" 
                                                       FontSize="12"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Header="Price"  
                                                Width="100">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding ComponentPrice}" 
                                                       TextAlignment="Center"
                                                       Foreground="{StaticResource color13}" 
                                                       FontWeight="DemiBold" 
                                                       FontSize="12"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Header="Category"  
                                                Width="70">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding ComponentCategory}" 
                                                       TextAlignment="Center"
                                                       Foreground="{StaticResource color13}" 
                                                       FontWeight="DemiBold" 
                                                       FontSize="12"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Header="Quantity"  
                                                Width="65">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding ComponentQuantity}" 
                                                       TextAlignment="Center"
                                                       Foreground="{StaticResource color13}" 
                                                       FontWeight="DemiBold" 
                                                       FontSize="12"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>

                                </GridViewColumn>

                            </GridView>
                        </ListView.View>
                    </ListView>

                    <Border Grid.Row="2"
                          Height="30"
                          Width="100"
                          Margin="0,0,20,0"
                          Background="{StaticResource color13}"
                          CornerRadius="8"
                          HorizontalAlignment="Right">

                        <Button Height="30"
                                  Width="100"
                                  Background="Transparent"
                                  Content=" + Add Item "
                                  FontSize="11"
                                  FontWeight="Bold"
                                  Foreground="White"
                                  BorderThickness="0"
                                  Command="{Binding AddCommand}"
                                  VerticalAlignment="Center"/>

                    </Border>

                </StackPanel>

            </Grid>



            <StackPanel Grid.Column="1">

                <TextBlock Text="Selected Components"
                           FontSize="15"
                           FontWeight="ExtraBold"
                           Foreground="{StaticResource color13}"
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"/>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right">

                    <Border Height="30"
                            Width="70"
                            Margin="0,10,30,0"
                           Background="{StaticResource color13}"
                           CornerRadius="8">

                        <Button Height="30"
                                  Width="50"
                                  Background="Transparent"
                                  Content=" ✔ Save "
                                  ToolTip="Save the list"
                                  FontSize="11"
                                  FontWeight="Bold"
                                  Foreground="White"
                                  BorderThickness="0"
                                  Command="{Binding SaveCommand}"/>

                    </Border>

                    <Border Height="30"
                            Width="80"
                            Margin="0,10,20,0"
                            HorizontalAlignment="Right"
                            Background="{StaticResource color13}"
                            CornerRadius="8">

                        <Button Height="30"
                                  Width="70"
                                  Background="Transparent"
                                  Content=" X Clear List"
                                  ToolTip="Every item on the list will be deleted"
                                  FontSize="11"
                                  FontWeight="Bold"
                                  Foreground="White"
                                  BorderThickness="0"
                                  Command="{Binding ClearSelectedListCommand}"/>

                    </Border>

                </StackPanel>



                <ListView  Width="410"
                           Height="220"
                           Margin="2,20,0,0"
                           BorderBrush="{StaticResource color8}"
                           BorderThickness="2"
                           ItemsSource="{Binding SelectedList}">

                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Background" Value="Transparent"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#E0BBE4"/>
                                    <!-- Set background color for selected item -->
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListView.ItemContainerStyle>

                    <ListView.View>
                        <GridView>
                            <!-- Header Style -->
                            <GridView.ColumnHeaderContainerStyle>
                                <Style TargetType="{x:Type GridViewColumnHeader}">
                                    <Setter Property="Background" Value="{StaticResource color12}"/>
                                    <Setter Property="Foreground" Value="{StaticResource color2}"/>
                                    <Setter Property="FontSize" Value="14"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </Style>
                            </GridView.ColumnHeaderContainerStyle>

                            <!-- Columns -->
                            <GridViewColumn Header="Name"
                                            Width="110">

                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding ComponentName}" 
                                                   TextAlignment="Center"
                                                   Foreground="{StaticResource color13}" 
                                                   FontWeight="DemiBold" 
                                                   FontSize="12"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>

                            </GridViewColumn>

                            <GridViewColumn Header="Price"
                                            Width="110">

                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding ComponentPrice}" 
                                                   TextAlignment="Center"
                                                   Foreground="{StaticResource color13}" 
                                                   FontWeight="DemiBold" 
                                                   FontSize="12"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>

                            </GridViewColumn>

                            <GridViewColumn Header="Brand"
                                            Width="100">

                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding ComponentBrand}" 
                                                   TextAlignment="Center"
                                                   Foreground="{StaticResource color13}" 
                                                   FontWeight="DemiBold" 
                                                   FontSize="12"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>

                            </GridViewColumn>

                            <GridViewColumn Header="Category"
                                            Width="70">

                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding ComponentCategory}" 
                                                   TextAlignment="Center"
                                                   Foreground="{StaticResource color13}" 
                                                   FontWeight="DemiBold" 
                                                   FontSize="12"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>

                            </GridViewColumn>

                        </GridView>
                    </ListView.View>
                </ListView>

                <StackPanel Orientation="Horizontal">

                    <TextBlock Text="SubTotal"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Center"
                              Margin="20,10,0,20"
                              FontStyle="Normal"
                              FontSize="20"
                              FontWeight="ExtraBlack"
                              Foreground="{StaticResource color13}"/>

                    <TextBox Width="280"
                            Height="30"
                            Margin="20,0,0,0"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Text="{Binding Total}"
                            FontSize="12"
                            FontWeight="Bold"
                            Foreground="{StaticResource color13}"                        
                            BorderBrush="{StaticResource color8}"
                            BorderThickness="2"/>

                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment ="Center">


                    <Border Height="30"
                            Width="90"
                            Background="{StaticResource color13}"
                            CornerRadius="8"
                            Margin="320,0,0,0">

                        <Button Height="30"
                               Width="90"
                               Background="Transparent"
                               Content="- Delete Item"
                               ToolTip="Delete the Selected Item"
                               FontSize="11"
                               FontWeight="Bold"
                               Foreground="White"
                               BorderThickness="0"
                               HorizontalAlignment="Center"
                               Command="{Binding DeleteCommand}"/>

                    </Border>

                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            Margin="20,20,0,0">

                    <TextBlock Text="Need a Reference?"/>

                    <Font:FontAwesome Icon="Book"
                                      Height="25"
                                      Width="30"
                                      FontSize="15"
                                      Margin="0,1,0,0"
                                      VerticalAlignment="Top"/>

                </StackPanel>

                <Border Height="30"
                        Width="300"
                        Margin="0,5,0,0"
                        Background="{StaticResource color12}"
                        CornerRadius="8">

                    <Button Height="30"
                           Width="400"
                           Background="Transparent"
                           Content=" Past PC Build Configurations "
                           HorizontalAlignment="Center"
                           FontSize="15"
                           FontWeight="Medium"
                           Foreground="{StaticResource color2}"
                           BorderThickness="0"
                           Command="{Binding ShowPastPCBuildConfigurationsCommand}"/>

                </Border>

            </StackPanel>

        </Grid>

    </Grid>


</UserControl>
