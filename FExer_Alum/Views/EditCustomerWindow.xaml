<Window x:Class="FINALPROJECT_OOP_ALUM.Views.EditCustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FINALPROJECT_OOP_ALUM.Views" 
        xmlns:viewmodels="clr-namespace:FINALPROJECT_OOP_ALUM.ViewModels" 
        d:DataContext="{d:DesignInstance Type=viewmodels:EditCustomerViewModel}"
        mc:Ignorable="d"
        Title="EditCustomerWindow"
        Name="EditCustomer"
        Height="450" 
        Width="400">

    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="{StaticResource primaryBackColor1}" Offset="0.2"/>
            <GradientStop Color="{StaticResource secondaryBackColor4}" Offset="0.7"/>
            <GradientStop Color="{StaticResource secondaryBackColor2}" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <Border CornerRadius="50">
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <StackPanel HorizontalAlignment="Left" 
                        Width="249" 
                        Margin="58,47,0,0">

                <Image Source="/Images/Logo.png" 
                       Height="80"/>

                <TextBlock Text="TechTune PC Solutions"
                           Foreground="{StaticResource color13}"
                           FontSize="20"
                           FontWeight="ExtraBold"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,0"/>

                <TextBlock Text="Name"
                           Margin="0,10,0,5"
                           FontSize="13"
                           FontWeight="ExtraBold"
                           Foreground="{StaticResource color8}"/>

                <TextBox Text="{Binding NewName}"
                         FontSize="12"
                         FontWeight="Bold"
                         Foreground="{StaticResource color13}"
                         BorderBrush="{StaticResource color8}"
                         BorderThickness="2"
                         Height="25"/>

                <TextBlock Text="Contact Number"
                           Margin="0,10,0,5"
                           FontSize="13"
                           FontWeight="ExtraBold"
                           Foreground="{StaticResource color8}"/>

                <TextBox Text="{Binding NewContactNumber}"
                         FontSize="12"
                         FontWeight="Bold"
                         Foreground="{StaticResource color13}"
                         BorderBrush="{StaticResource color8}"
                         BorderThickness="2"
                         Height="25"/>

                <TextBlock Text="Automatically generated ID:"
                           Margin="0,10,0,5"
                           FontSize="13"
                           FontWeight="ExtraBold"
                           Foreground="{StaticResource color8}"/>

                <TextBox Text="{Binding SelectedCustomer.CustomerID}"
                         FontSize="12"
                         FontWeight="Bold"
                         Foreground="{StaticResource color13}"                        
                         BorderBrush="{StaticResource color8}"
                         BorderThickness="2"
                         Height="25"
                         IsReadOnly="True"/>


            </StackPanel>

            <StackPanel Grid.Row="1"
                        Orientation="Horizontal"
                        Margin="200,0,0,0"
                        VerticalAlignment="Top">

                <Border Height="30"
                        Width="70"
                        Margin="0,10,20,0"
                        Background="{StaticResource color13}"
                        CornerRadius="8"
                        HorizontalAlignment="Center">

                        <Button Height="30"
                                Width="100"
                                Background="Transparent"
                                Content=" Cancel "
                                FontSize="11"
                                FontWeight="Bold"
                                Foreground="White"
                                BorderThickness="0"
                                CommandParameter="{x:Reference Name=EditCustomer}"
                                Command="{Binding CancelChangesCommand}" 
                                HorizontalAlignment="Center" />

                </Border>
                
                <Border Height="30"
                        Width="70"
                        Margin="0,10,0,0"
                        Background="{StaticResource color13}"
                        CornerRadius="8"
                        HorizontalAlignment="Center">

                    <Button Height="30"
                            Width="100"
                            Background="Transparent"
                            Content="Save"
                            FontSize="11"
                            FontWeight="Bold"
                            Foreground="White"
                            BorderThickness="0"
                            Command="{Binding SaveChangesCommand}"  
                            CommandParameter="{x:Reference Name=EditCustomer}"
                            HorizontalAlignment="Center" />

                </Border>

            </StackPanel>

        </Grid>

    </Border>
    
</Window>
