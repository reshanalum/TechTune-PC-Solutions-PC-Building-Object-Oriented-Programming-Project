<UserControl x:Class="FINALPROJECT_OOP_ALUM.Views.RepairUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FINALPROJECT_OOP_ALUM.Views"
             xmlns:ViewModel ="clr-namespace:FINALPROJECT_OOP_ALUM.ViewModels"
             xmlns:Font ="http://schemas.fontawesome.io/icons/" 
             mc:Ignorable="d" 
             d:DesignHeight="540" 
             d:DesignWidth="860"
             Background="White">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row ="0">

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

               <StackPanel Grid.Column="0"
                            Orientation="Horizontal">

                   <Border Grid.Column="0"
                            Height="28"
                            Width="250"
                            Background="White"
                            Margin="30,0,0,0"
                            BorderBrush="{StaticResource color2}" 
                            BorderThickness="2">

                        <TextBox Name="FilterTextBox"
                                 TextChanged="FilterTextBox_TextChanged"
                                 Margin="0,0,0,0"
                                 Foreground="{StaticResource color8}"/>

                   </Border>


                    <Border Grid.Column="0"
                            Height="28"
                            Background="White"
                            BorderBrush="{StaticResource color2}" 
                            BorderThickness="2">

                        <Font:FontAwesome Icon="Search"
                                          Height="25"
                                          Width="30"
                                          FontSize="15"
                                          Margin="0,1,0,0"
                                          Foreground="{StaticResource color7}"
                                          VerticalAlignment="Top"/>
                    </Border>

            </StackPanel>


        </Grid>


        <Grid Grid.Row="1">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="113.333"/>
                <ColumnDefinition Width="336.667"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <ListView Grid.Row="0"
                      Name="RepairTicketList"
                      Padding="10"
                      Background="Transparent"
                      BorderBrush="Transparent"
                      ItemsSource="{Binding RepairTicketList}"
                      SelectedItem="{Binding SelectedTicket}"
                      Margin="0,5,0,10"
                      HorizontalContentAlignment="Center"
                      Grid.ColumnSpan="2" >

                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Background" Value="Transparent"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{StaticResource color14}"/>
                                <!-- Set background color for selected item -->
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>

                <ListView.View>
                    <GridView>
                        <!-- Header Style -->
                        <GridView.ColumnHeaderContainerStyle>
                            <Style TargetType="{x:Type GridViewColumnHeader}">
                                <Setter Property="Background" Value="{StaticResource color13}"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontSize" Value="14"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Style>
                        </GridView.ColumnHeaderContainerStyle>

                        <!-- Columns -->
                        <GridViewColumn Header=" Ticket ID" Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding ID}" 
                                               TextAlignment="Center"
                                               Foreground="{StaticResource color13}" 
                                               FontWeight="Bold" 
                                               FontSize="12"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="Customer" 
                                        Width="120">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Customer.CustomerName}" 
                                               TextAlignment="Center"
                                               Foreground="{StaticResource color13}" 
                                               FontWeight="Bold" 
                                               FontSize="12"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="Status" 
                                        Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Status}" 
                                               TextAlignment="Center"
                                               Foreground="{StaticResource color13}" 
                                               FontWeight="Bold" 
                                               FontSize="12"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="Start Date" 
                                        Width="90">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding StartDate, StringFormat={}{0:d}}" 
                                               TextAlignment="Center"
                                               Foreground="{StaticResource color13}" 
                                               FontWeight="Bold" 
                                               FontSize="12"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                    </GridView>

                </ListView.View>

            </ListView>



            <StackPanel Grid.Column="2">

                <StackPanel.Background>
                    <LinearGradientBrush StartPoint="0,0" 
                                         EndPoint="1,0">
                        <GradientStop Color="{StaticResource primaryBackColor1}" Offset="0.2"/>
                        <GradientStop Color="{StaticResource secondaryBackColor4}" Offset="0.7"/>
                        <GradientStop Color="{StaticResource secondaryBackColor2 }" Offset="1"/>
                    </LinearGradientBrush>

                </StackPanel.Background>

                <Grid Grid.Column ="1"
                      Height="350">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="60"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>


                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center">

                        <Border Grid.Row="0"
                                Height="30"
                                Width="100"
                                Margin="0,10,0,0"
                                Background="{StaticResource color13}"
                                CornerRadius="8"
                                HorizontalAlignment="Center">

                            <Button Height="30"
                                    Width="100"
                                    Background="Transparent"
                                    Content="+ Add Ticket"
                                    FontSize="11"
                                    FontWeight="Bold"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Command="{Binding ShowAddTicketWindowCommand }" 
                                    Margin="2,0,-2,0" />

                        </Border>

                        <Border Height="30"
                                Width="100"
                                Margin="30,10,0,0"
                                Background="{StaticResource color13}"
                                CornerRadius="8">

                            <Button Height="30"
                                    Width="100"
                                    Background="Transparent"
                                    Content="✔ Edit Ticket"
                                    FontSize="11"
                                    FontWeight="Bold"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Command="{Binding ShowEditTicketWindowCommand}"/>

                        </Border>


                    </StackPanel>



                    <Grid Grid.Row="1">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="1">


                            <TextBlock Text="Ticket ID"
                                       Height="20"
                                       Margin="20,5,0,0"
                                       FontSize="13"
                                       FontWeight="ExtraBold"
                                       Foreground="{StaticResource color8}"/>

                            <TextBox Width="150"
                                     Margin="0,5,0,0"
                                     FontSize="12"
                                     FontWeight="Bold"
                                     Text="{Binding SelectedTicket.ID, UpdateSourceTrigger=PropertyChanged}"
                                     IsReadOnly="True"
                                     Foreground="{StaticResource color13}"                        
                                     BorderBrush="{StaticResource color8}"
                                     BorderThickness="2"/>

                            <TextBlock Text="Customer Information"
                                       HorizontalAlignment="Center"
                                       FontSize="13"
                                       FontWeight="ExtraBold"
                                       Margin="0,20,0,0"
                                       Foreground="{StaticResource color8}"/>

                            <TextBlock Text="ID:"
                                       Margin="10,5,0,0"
                                       FontSize="13"
                                       FontWeight="ExtraBold"
                                       Foreground="{StaticResource color8}"/>

                            <TextBox Width="150"
                                     Height="20"
                                     Margin="0,5,0,0"
                                     IsReadOnly="True"
                                     FontSize="12"
                                     FontWeight="Bold"
                                     Foreground="{StaticResource color13}"                        
                                     BorderBrush="{StaticResource color8}"
                                     BorderThickness="2"
                                     Text="{Binding SelectedTicket.Customer.CustomerID,  UpdateSourceTrigger=PropertyChanged}"/>

                            <TextBlock Text="Name:"
                                       Margin="10,5,0,0"
                                       FontSize="13"
                                       FontWeight="ExtraBold"
                                       Foreground="{StaticResource color8}"/>

                            <TextBox Width="150"
                                     Height="20"
                                     Margin="0,5,0,0"
                                     IsReadOnly="True"
                                     FontSize="12"
                                     FontWeight="Bold"
                                     Foreground="{StaticResource color13}"                        
                                     BorderBrush="{StaticResource color8}"
                                     BorderThickness="2"
                                     Text="{Binding SelectedTicket.Customer.CustomerName, UpdateSourceTrigger=PropertyChanged}"/>

                            <TextBlock Text="Contact Number:"
                                       Margin="10,5,0,0"
                                       FontSize="13"
                                       FontWeight="ExtraBold"
                                       Foreground="{StaticResource color8}"/>

                            <TextBox Width="150"
                                     Height="20"
                                     Margin="0,5,0,0"
                                     IsReadOnly="True"
                                     FontSize="12"
                                     FontWeight="Bold"
                                     Foreground="{StaticResource color13}"                        
                                     BorderBrush="{StaticResource color8}"
                                     BorderThickness="2"
                                     Text="{Binding SelectedTicket.Customer.CustomerContactNumber, UpdateSourceTrigger=PropertyChanged}"/>


                        </StackPanel>

                        <StackPanel Grid.Column="0">

                            <TextBlock Text="Status"
                                       Height="20"
                                       Margin="20,5,0,0"
                                       FontSize="13"
                                       FontWeight="ExtraBold"
                                       Foreground="{StaticResource color8}"/>

                            <TextBox Width="150"
                                     Margin="0,5,0,0"
                                     IsReadOnly="True"
                                     FontSize="12"
                                     FontWeight="Bold"
                                     Foreground="{StaticResource color13}"                        
                                     BorderBrush="{StaticResource color8}"
                                     BorderThickness="2"
                                     Text="{Binding SelectedTicket.Status, UpdateSourceTrigger=PropertyChanged}"/>


                            <TextBlock Text="Status scpecification"
                                       Height="20"
                                       Margin="20,5,0,0"
                                       FontSize="13"
                                       FontWeight="ExtraBold"
                                       Foreground="{StaticResource color8}"/>

                            <TextBox Width="150"
                                     Margin="0,5,0,0"
                                     IsReadOnly="True"
                                     FontSize="12"
                                     FontWeight="Bold"
                                     Foreground="{StaticResource color13}"                        
                                     BorderBrush="{StaticResource color8}"
                                     BorderThickness="2"
                                     Text="{Binding SelectedTicket.StatusSpec, UpdateSourceTrigger=PropertyChanged}"/>

                            <TextBlock Text="Diagnosis"
                                       Height="20"
                                       Margin="20,5,0,0"
                                       FontSize="13"
                                       FontWeight="ExtraBold"
                                       Foreground="{StaticResource color8}"/>

                            <TextBox Width="150"
                                     Margin="0,5,0,0"
                                     IsReadOnly="True"
                                     FontSize="12"
                                     FontWeight="Bold"
                                     Foreground="{StaticResource color13}"                        
                                     BorderBrush="{StaticResource color8}"
                                     BorderThickness="2"
                                     Text="{Binding SelectedTicket.Diagnosis, UpdateSourceTrigger=PropertyChanged}"/>

                            <TextBlock Text="Description"
                                       Height="20"
                                       Margin="20,5,0,0"
                                       FontSize="13"
                                       FontWeight="ExtraBold"
                                       Foreground="{StaticResource color8}"/>

                            <TextBox Width="150"
                                     Height="50"
                                     Margin="0,5,0,0"
                                     IsReadOnly="True"
                                     FontSize="12"
                                     FontWeight="Bold"
                                     Foreground="{StaticResource color13}"                        
                                     BorderBrush="{StaticResource color8}"
                                     BorderThickness="2"
                                     Text="{Binding SelectedTicket.Description, UpdateSourceTrigger=PropertyChanged}"/>

                            <TextBlock Text="Repair Cost"
                                       Height="20"
                                       Margin="20,5,0,0"
                                       FontSize="13"
                                       FontWeight="ExtraBold"
                                       Foreground="{StaticResource color8}"/>

                            <TextBox Width="150"
                                     FontSize="12"
                                     FontWeight="Bold"
                                     Foreground="{StaticResource color13}"                        
                                     BorderBrush="{StaticResource color8}"
                                     BorderThickness="2"
                                     Margin="0,5,0,0"
                                     IsReadOnly="True"
                                     Text="{Binding SelectedTicket.RepairCost, UpdateSourceTrigger=PropertyChanged}"/>

                        </StackPanel>


                    </Grid>



                </Grid>

                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Bottom"
                            Margin="0,40,0,0">

                    <TextBlock Text="Start Date"
                               Height="15"
                               Margin="20,5,43,0"
                               FontSize="13"
                               FontWeight="ExtraBold"
                               Foreground="{StaticResource color1}"/>

                    <TextBox Width="120"
                             Margin="0,5,0,0"
                             IsReadOnly="True"
                             FontSize="12"
                             FontWeight="Bold"
                             Foreground="{StaticResource color2}"                        
                             BorderBrush="{StaticResource color1}"
                             BorderThickness="2"
                             Text="{Binding SelectedTicket.StartDate, StringFormat={}{0:d},UpdateSourceTrigger=PropertyChanged}"/>

                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            Margin="0,5,0,0">

                    <TextBlock Text="Date Completed"
                               Height="15"
                               Margin="20,5,5,0"
                               FontSize="13"
                               FontWeight="ExtraBold"
                               Foreground="{StaticResource color1}"/>

                    <TextBox Width="120"
                             Margin="0,5,0,0"
                             IsReadOnly="True"                                FontSize="12"
                             FontWeight="Bold"
                             Foreground="{StaticResource color2}"                        
                             BorderBrush="{StaticResource color1}"
                             BorderThickness="2"
                             Text="{Binding SelectedTicket.DateCompleted, StringFormat={}{0:d}, UpdateSourceTrigger=PropertyChanged}"/>

                </StackPanel>


            </StackPanel>


        </Grid>


    </Grid>


</UserControl>
