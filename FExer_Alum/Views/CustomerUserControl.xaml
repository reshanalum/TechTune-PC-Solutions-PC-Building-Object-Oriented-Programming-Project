<UserControl x:Class="FINALPROJECT_OOP_ALUM.Views.CustomerUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FINALPROJECT_OOP_ALUM.Views"
             xmlns:VM="clr-namespace:FINALPROJECT_OOP_ALUM.ViewModels"
             xmlns:Font ="http://schemas.fontawesome.io/icons/" 
             mc:Ignorable="d" 
             d:DesignHeight="540" 
             d:DesignWidth="860"
             Background="White">

    <UserControl.DataContext>
        <VM:CustomersViewModel/>
    </UserControl.DataContext>


    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition Height="40"/>

        </Grid.RowDefinitions>

        <Grid Grid.Row ="0">

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0"
                            Orientation="Horizontal">

                <Border Grid.Column="0"
                        Height="28"
                        Width="250"
                        Background="White"
                        Margin="30,0,0,0"
                        BorderBrush="{StaticResource color2}" 
                        BorderThickness="2">

                    <TextBox Name="FilterTextBox"
                             TextChanged="FilterTextBox_TextChanged"
                             Margin="0,0,0,0"
                             Foreground="{StaticResource color8}" 
                             FontWeight="DemiBold" 
                             FontSize="12"/>

                </Border>


                <Border Grid.Column="0"
                        Height="28"
                        Background="White"
                        BorderBrush="{StaticResource color2}" 
                        BorderThickness="2">

                    <Font:FontAwesome Icon="Search"
                                      Height="25"
                                      Width="30"
                                      FontSize="15"
                                      Margin="0,1,0,0"
                                      Foreground="{StaticResource color7}"
                                      VerticalAlignment="Top"/>
                </Border>

            </StackPanel>


        </Grid>

        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"/>

        <Grid Grid.Row="1">

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <ListView Grid.Row="0"
                      Name="CustomerList"
                      Padding="15"
                      Background="Transparent"
                      BorderBrush="Transparent"
                      ItemsSource="{Binding CustomerList}"
                      SelectedItem="{Binding SelectedCustomer}"
                      Margin="0,5,0,10"
                      HorizontalContentAlignment="Center" SelectionChanged="CustomerList_SelectionChanged" >

                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Background" Value="Transparent"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{StaticResource color14}"/>
                                <!-- Set background color for selected item -->
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>

                <ListView.View>
                    <GridView>
                        <!-- Header Style -->
                        <GridView.ColumnHeaderContainerStyle>
                            <Style TargetType="{x:Type GridViewColumnHeader}">
                                <Setter Property="Background" Value="{StaticResource color13}"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontSize" Value="14"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Style>
                        </GridView.ColumnHeaderContainerStyle>

                        <!-- Columns -->
                        <GridViewColumn Header="ID" Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding CustomerID}" 
                                               TextAlignment="Center"
                                               Foreground="{StaticResource color13}" 
                                               FontWeight="DemiBold" 
                                               FontSize="12"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="Name" 
                                        Width="230">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding CustomerName}" 
                                               TextAlignment="Center"
                                               Foreground="{StaticResource color13}" 
                                               FontWeight="Bold" 
                                               FontSize="12"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="Contact No." 
                                        Width="170">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding CustomerContactNumber}" 
                                               TextAlignment="Center"
                                               Foreground="{StaticResource color13}" 
                                               FontWeight="Bold" 
                                               FontSize="12"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                    </GridView>

                </ListView.View>

            </ListView>


            <StackPanel Grid.Column="1"
                        Margin="10,0,0,0">

                <StackPanel.Background>
                    <LinearGradientBrush StartPoint="0,0" 
                                         EndPoint="1,0">
                        <GradientStop Color="{StaticResource primaryBackColor1}" Offset="0.2"/>
                        <GradientStop Color="{StaticResource secondaryBackColor4}" Offset="0.7"/>
                        <GradientStop Color="{StaticResource secondaryBackColor2 }" Offset="1"/>


                    </LinearGradientBrush>
                </StackPanel.Background>

                <Border Height="30"
                        Width="100"
                        Margin="0,20,0,20"
                        Background="{StaticResource color13}"
                        CornerRadius="8"
                        HorizontalAlignment="Center">

                    <Button Height="30"
                            Width="100"
                            Background="Transparent"
                            Content=" + Add Customer "
                            FontSize="11"
                            FontWeight="Bold"
                            Foreground="White"
                            BorderThickness="0"
                            Command="{Binding ShowAddCustomerWindowCommand}" Margin="2,0,-2,0" />

                </Border>

                <TextBlock Text="Customer ID"
                           Margin="10,10,0,0"
                           FontSize="13"
                           FontWeight="ExtraBold"
                           Foreground="{StaticResource color8}"/>

                <TextBox Width="150"
                         Height="20"
                         Margin="0,5,0,0"
                         IsReadOnly="True"
                         FontSize="12"
                         FontWeight="Bold"
                         Foreground="{StaticResource color13}"                        
                         BorderBrush="{StaticResource color8}"
                         BorderThickness="2"
                         Text="{Binding SelectedCustomer.CustomerID, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Text="Customer Name"
                           Margin="10,5,0,0"
                           FontSize="13"
                           FontWeight="ExtraBold"
                           Foreground="{StaticResource color8}"/>

                <TextBox Width="150"
                         Height="20"
                         Margin="0,5,0,0"
                         FontSize="12"
                         FontWeight="Bold"
                         Foreground="{StaticResource color13}"                        
                         BorderBrush="{StaticResource color8}"
                         BorderThickness="2"                 
                         Text="{Binding SelectedCustomer.CustomerName, UpdateSourceTrigger=PropertyChanged}"/>


                <TextBlock Text="Contact Number"
                           Height="20"
                           Margin="10,5,0,0"
                           FontSize="13"
                           FontWeight="ExtraBold"
                           Foreground="{StaticResource color8}"/>

                <TextBox Width="150"
                         Margin="0,5,0,0"
                         FontSize="12"
                         FontWeight="Bold"
                         Foreground="{StaticResource color13}"                        
                         BorderBrush="{StaticResource color8}"
                         BorderThickness="2"
                         Text="{Binding SelectedCustomer.CustomerContactNumber, UpdateSourceTrigger=PropertyChanged}"/>



                <StackPanel Orientation="Horizontal"
                            Margin="0,20,0,0"
                            HorizontalAlignment="Center">

                    <Border Height="30"
                            Width="70"
                            Margin="0,0,0,0"
                            Background="{StaticResource color13}"
                            CornerRadius="8">

                        <Button Height="30"
                                Width="50"
                                Background="Transparent"
                                Content="✔ Edit"
                                FontSize="11"
                                FontWeight="Bold"
                                Foreground="White"
                                BorderThickness="0"
                                Command="{Binding ShowEditCustomerWindowCommand}"/>

                    </Border>

                    <Border Height="30"
                            Width="70"
                            Margin="25,0,0,0"
                            Background="{StaticResource color13}"
                            CornerRadius="10">

                        <Button Height="30"
                                Width="50"
                                Background="Transparent"
                                Content="x Delete"
                                FontSize="11"
                                FontWeight="Bold"
                                Foreground="White"
                                BorderThickness="0"
                                Command="{Binding DeleteCustomerCommand}"/>

                    </Border>

                </StackPanel>

            </StackPanel>

        </Grid>

    </Grid>


</UserControl>
