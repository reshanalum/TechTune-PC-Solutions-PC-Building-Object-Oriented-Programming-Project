<Window x:Class="FINALPROJECT_OOP_ALUM.Views.EditTicketWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FINALPROJECT_OOP_ALUM.Views"
                xmlns:viewmodels="clr-namespace:FINALPROJECT_OOP_ALUM.ViewModels" 
        d:DataContext="{d:DesignInstance Type=viewmodels:EditTicketViewModel}"
        mc:Ignorable="d"
        Title="EditTicketWindow"
        Name ="EditTicket"
        Height="450" 
        Width="300">

    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="{StaticResource primaryBackColor1}" Offset="0.2"/>
            <GradientStop Color="{StaticResource secondaryBackColor4}" Offset="0.7"/>
            <GradientStop Color="{StaticResource secondaryBackColor2}" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <Border CornerRadius="50">
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="70"/>
            </Grid.RowDefinitions>

            <StackPanel>
                <Image Source="/Images/Logo.png" 
                       Height="70"/>

                <TextBlock Text="TechTune PC Solutions"
                           Foreground="{StaticResource color13}"
                           FontSize="12"
                           FontWeight="ExtraBold"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,0"/>

                <StackPanel HorizontalAlignment="Center"
                            Width="250">

                    <TextBlock Text="Total Price"
                               Height="20"
                               Margin="0,10,0,0"
                               HorizontalAlignment="Left"
                               FontSize="13"
                               FontWeight="ExtraBold"
                               Foreground="{StaticResource color8}"/>


                   <TextBox FontSize="12"
                            FontWeight="Bold"
                            Foreground="{StaticResource color13}"
                            BorderBrush="{StaticResource color8}"
                            BorderThickness="2"
                            Height="20"
                            Width="170"
                            HorizontalAlignment="Center"
                            Text="{Binding NewRepairCost}" 
                            TextChanged="TextBox_TextChanged"/>

                   <TextBlock Text="Status"
                              Height="20"
                              Margin="0,10,0,0"
                              FontSize="13"
                              FontWeight="ExtraBold"
                              HorizontalAlignment="Left"
                              Foreground="{StaticResource color8}"/>

                   <ComboBox Height="20"
                             Width="170"
                             ItemsSource="{Binding StatusOptions}"
                             Text="{ Binding NewStatus}"/>


                   <TextBlock Text="Status scpecification"
                              Height="20"
                              Margin="0,10,0,0"
                              FontSize="13"
                              FontWeight="ExtraBold"
                              HorizontalAlignment="Left"
                              Foreground="{StaticResource color8}"/>

                   <ComboBox Height="20"
                             Width="170"
                             ItemsSource="{Binding StatusSpecOptions}"
                             Text="{ Binding NewStatusSpec}"/>

                   <TextBlock Text="Date Completed"
                              Height="20"
                              HorizontalAlignment="Left"
                              FontSize="13"
                              FontWeight="ExtraBold"
                              Foreground="{StaticResource color8}"
                              Margin="0,10,0,0"/>

                   <DatePicker SelectedDate="{Binding DateCompleted, Mode=TwoWay}"
                               Width="170"
                               FontSize="12"
                               FontWeight="Bold"
                               Foreground="{StaticResource color13}"                        
                               BorderBrush="{StaticResource color8}"
                               BorderThickness="2"/>

                </StackPanel>


            </StackPanel>

            <StackPanel Grid.Row="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top">

                <Border Height="30"
                        Width="70"
                        Margin="0,10,20,0"
                        Background="{StaticResource color13}"
                        CornerRadius="8"
                        HorizontalAlignment="Center">

                   <Button Height="30"
                           Width="100"
                           Background="Transparent"
                           Content=" ✔Save"
                           FontSize="11"
                           FontWeight="Bold"
                           Foreground="White"
                           BorderThickness="0"
                           Command="{Binding SaveChangesCommand}"  
                           CommandParameter="{x:Reference Name=EditTicket}"
                           HorizontalAlignment="Center" />

                </Border>

                <Border Height="30"
                        Width="70"
                        Margin="0,10,0,0"
                        Background="{StaticResource color13}"
                        CornerRadius="8"
                        HorizontalAlignment="Center">

                       <Button Height="30"
                               Width="100"
                               Background="Transparent"
                               Content=" X Cancel "
                               FontSize="11"
                               FontWeight="Bold"
                               Foreground="White"
                               BorderThickness="0"
                               CommandParameter="{x:Reference Name=EditTicket}"
                               Command="{Binding CancelChangesCommand}"
                               HorizontalAlignment="Center" />

                </Border>

            </StackPanel>


        </Grid>

    </Border>
</Window>
