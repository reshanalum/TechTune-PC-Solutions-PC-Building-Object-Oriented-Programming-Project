<Window x:Class="FINALPROJECT_OOP_ALUM.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FINALPROJECT_OOP_ALUM.Views"
        xmlns:Font ="http://schemas.fontawesome.io/icons/"
        mc:Ignorable="d"
        Title="LoginWindow" 
        Height="600" 
        Width="800"
        FontSize="18"
        WindowStyle="None"
        Background="Transparent"
        ResizeMode="NoResize"
        MouseDown="Window_MouseDown">

    <Grid>
        <Border>
            <Grid>
                <Grid.Effect>
                    <DropShadowEffect BlurRadius="30"
                                      ShadowDepth="1"
                                      Opacity="0.4"/>
                </Grid.Effect>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="350"/>
                    <ColumnDefinition/>

                </Grid.ColumnDefinitions>

                <Border Background="#07bf96"
                        CornerRadius="10,0,0,10"
                        ClipToBounds="True">

                    <Grid>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="300"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0"
                                    Margin="0,120,0,0"
                                    VerticalAlignment="Top"
                                    HorizontalAlignment="Center">

                            <TextBlock Text="Welcome Back!"
                                       Foreground="White"
                                       FontSize="30"
                                       FontWeight="DemiBold"/>

                            <TextBlock Text="Please Login."
                                       Foreground="White"
                                       FontSize="20"
                                       FontWeight="DemiBold"/>


                        </StackPanel>

                        <Ellipse 
                                 Height="513"
                                 VerticalAlignment="Bottom"
                                 Fill=" #5ec"
                                 Margin="-124,0,200,-87"
                                 Opacity="0.2" Grid.RowSpan="2"/>

                        <Ellipse 
                                 Width="500"
                                 Height="500"
                                 VerticalAlignment="Top"
                                 Fill=" #73D9"
                                 Margin="-110,250,10,0"
                                 Opacity="0.4" Grid.RowSpan="2"/>

                        <Ellipse 
                                 Width="500"
                                 Height="500"
                                 VerticalAlignment="Top"
                                 Fill=" #5eccb4"
                                 Margin="167,187,-267,0"
                                 Opacity="0.3" Grid.RowSpan="2"/>

                        <Ellipse Grid.Row="1"
                                 Width="500"
                                 Height="500"
                                 VerticalAlignment="Top"
                                 Fill=" #5ec"
                                 Margin="30,173,-130,0"
                                 Opacity="0.5"/>


                        <Font:ImageAwesome Grid.Row="1"
                                           Icon="CheckCircle"
                                           Foreground="AliceBlue"
                                           Width="100"
                                           VerticalAlignment="Bottom"
                                           Margin="0,0,0,50"/>


                    </Grid>


                </Border>

                <Border Grid.Column="1"
                        Background="White"
                        CornerRadius="0,10,10,0"
                        ClipToBounds="True" Margin="2,0,-2,0">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="17*"/>
                            <RowDefinition Height="7*"/>
                            <RowDefinition Height="526*"/>
                        </Grid.RowDefinitions>

                        <Button Grid.Row="0"
                                x:Name="btnClose"
                                Background="Transparent"
                                Content="X"
                                FontSize="10"
                                Foreground="#5eccb4"
                                FontWeight="DemiBold"
                                BorderThickness="0"
                                Click="btnClose_Click"
                                HorizontalAlignment="Left"
                                Margin="412,0,0,0"/>

                        <StackPanel Grid.Row="1"
                                    Width="400" Margin="25,0,25,0" Grid.RowSpan="3">

                            <Image Source="/Images/Logo.png"
                                   Margin="0,50,0,0"
                                   Width="250"/>

                            <TextBlock Text="TechTune PC Solutions"
                                       Foreground="{StaticResource color13}"
                                       FontSize="20"
                                       FontWeight="ExtraBold"
                                       HorizontalAlignment="Center"
                                       Margin="0,10,0,0"/>

                            <StackPanel Width="300"
                                        Margin="0,20,0,0">

                                <TextBlock Text="Username"
                                           FontSize="15"
                                           Foreground="#20AE9D"
                                           FontWeight="Medium"
                                           Margin="0,20,0,0"/>


                                <TextBox x:Name="User"
                                         FontSize="13"
                                         Background="Transparent"
                                         Foreground="#5eccb4"
                                         Margin="0,10,0,0"
                                         BorderBrush="#5eccb4"
                                         BorderThickness="0,0,0,4"
                                         Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}">
                                </TextBox>

                                <TextBlock Text="Password"
                                           FontSize="15"
                                           Foreground="#20AE9D"
                                           FontWeight="Medium"                                         
                                           Margin="0,10,0,0"/>

                                <PasswordBox x:Name="Pass"
                                             FontSize="13"
                                             Background="Transparent"
                                             Foreground="#5eccb4"
                                             Margin="0,10,0,0"
                                             BorderBrush="#5eccb4"
                                             BorderThickness="0,0,0,4"
                                             PasswordChanged="Pass_PasswordChanged">

                                </PasswordBox>

                            </StackPanel>



                            <Button x:Name="btnLogin"
                                    Content="LOG IN"
                                    FontSize="18"
                                    BorderThickness="0"
                                    BorderBrush="White"
                                    Margin="50,50,50,0"
                                    Width="200"
                                    Height="30"
                                    Click="btnLogin_Click"
                                    Command="{Binding LoginCommand}">

                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background"
                                                Value="{StaticResource color3}"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver"
                                                     Value="True">

                                                <Setter Property="Background"
                                                        Value="White"/>
                                            </Trigger>
                                        </Style.Triggers>

                                    </Style>
                                </Button.Style>

                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Width="150"
                                                CornerRadius="20"
                                                Background="#5ec">

                                            <ContentPresenter VerticalAlignment="Center"
                                                              HorizontalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>

                            </Button>

                        </StackPanel>
                    </Grid>





                </Border>

            </Grid>


        </Border>
    </Grid>

</Window>
